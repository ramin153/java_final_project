<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".check_email_frogment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/normall_width_mg"
        android:layout_gravity="center"
        android:orientation="vertical"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/sm_b_size"
            android:src="@drawable/ic_avatar"
            android:padding="@dimen/sm_size"
            android:background="@drawable/dark_round"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/lg_font"
            android:text="Work shop "
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="@dimen/md_size"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:text="please enter your email adders for send a validtion !"
            android:paddingHorizontal="@dimen/md_b_size"
            android:textColor="@color/colorPrimaryDark"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bootom_line_dark"

            android:layout_marginTop="@dimen/lg_size"

            >
            <ImageView
                android:layout_margin="@dimen/sm_size"
                android:layout_width="@dimen/lg_b_size"
                android:layout_height="@dimen/lg_b_size"
                android:src="@drawable/ic_user_"
                android:layout_gravity="center"
                />
            <EditText
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0000"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bootom_line_dark"
            android:layout_marginBottom="@dimen/lg_size"
            android:layout_marginTop="@dimen/sm_size"

            >
            <ImageView
                android:layout_margin="@dimen/sm_size"
                android:layout_width="@dimen/lg_b_size"
                android:layout_height="@dimen/lg_b_size"
                android:src="@drawable/ic_email"
                android:layout_gravity="center"
                />
            <EditText
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0000"
                android:inputType="textEmailAddress"
                />
        </LinearLayout>



        <Button
            android:id="@+id/send_email_fragment_check_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/md_size"
            android:layout_marginTop="@dimen/md_size"
            android:layout_marginBottom="@dimen/sm_size"
            android:text="send "
            android:textSize="@dimen/md_b_size"
            android:textColor="@color/colorDark_2"
            android:background="@drawable/btn_change_primey_accent"
            android:textAllCaps="false"
            />



    </LinearLayout>

</FrameLayout>