<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragment_Home_ShowWorkShop">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:paddingLeft="@dimen/md_size"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/lg_font"
        android:text="All workshops"
        />
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginLeft="@dimen/md_size"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Fragment_ShowWorkShop_all"
                />

        </LinearLayout>

    </HorizontalScrollView>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/dark_pri_round"
        />


</LinearLayout>