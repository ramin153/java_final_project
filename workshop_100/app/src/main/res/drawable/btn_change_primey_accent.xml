<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorAccent_2"
    >

    <item
        android:id="@android:id/background">
        <shape
            android:shape="rectangle">
            <solid android:color="#323332">

            </solid>
            <corners
                android:radius="@dimen/md_size"
                />


        </shape>
    </item>

    <item >
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="180"
                android:endColor="@color/colorPrimary"
                android:startColor="@color/colorPrimary_1">

            </gradient>
            <corners
                android:radius="@dimen/md_size"
                />
        </shape>

    </item>



</ripple>